<h1 class="text-center p-4 m-4">Login</h1>
<form id="login-form" class="row justify-content-center">
	<div class="card col-md-4 row shadow">
		<div class="card-body d-flex ">
			<div class="col-md-12 login-form-1">
				<div class="form-group">
					<label class="pt-4 col-sm-10 form-label" for="user-email">Email 
					address</label>
					<input id="user-email" aria-describedby="emailHelp" class="form-control" placeholder="Your Email *" type="email" value="" />
					<div id="emailHelp" class="pb-6 form-text col-md-10">
						We'll never share your email with anyone else.</div>
				</div>
				<div class="form-group pb-4">
					<label class="pt-4 form-label" for="user-password">Password</label>
					<input id="user-password" class="form-control" placeholder="Your Password *" type="password" value="" />
				</div>
				<button class="btnSubmit btn btn-primary" type="submit">Submit</button>
                <a class="pt-4" href="/signup">Sign up!</a> 
            </div>
		</div>
	</div>
</form>
<script src="./js/login.js"></script>
