<div class="card login-container" >
            <div class="card-body row d-flex justify-content-center">
                <div class="col-md-6 login-form-1">
                    <h3>Login</h3>
                    <form id="login-form">
                        <div class="form-group">
                           <label for="user-email" class="form-label">Email address</label>
                           <input type="email" class="form-control" id="user-email"  aria-describedby="emailHelp" placeholder="Your Email *" value="" />
                           <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                        </div>
                        <div class="form-group">
                            <label for="user-password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="user-password" placeholder="Your Password *" value="" />
                        </div>
                            <button type="submit"  class="btnSubmit btn btn-primary">Submit</button>
                            <a href="/signup">Sign up!</a>
                    </form>
                </div>
            </div>
</div>

<script src="./js/login.js"></script>