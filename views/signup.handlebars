<h1 class="text-center p-4 m-4">Sign Up!</h1>
<form id="signup-form" class="row justify-content-center">
	<div class="card col-md-4 row shadow">
		<div class="card-body d-flex ">
			<div class="col-md-12 login-form-1">
				<div class="form-group">
					<div class="mb-3">
						<label class="form-label" for="username">Email address</label>
						<input id="username" class="form-control" type="text" />
					</div>
					<div class="mb-3">
						<label class="form-label" for="user-password">Password</label>
						<input id="user-password" class="form-control" type="password" />
					</div>
					<button class="btn btn-primary" type="submit">Submit
					</button><a href="/login">Login!</a> </div>
			</div>
		</div>
	</div>
</form>
<script src="./js/signup.js"></script>

